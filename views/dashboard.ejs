<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dashboard Produk</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet"/>
  <style>
    body { font-family: 'Inter', sans-serif; }
  </style>
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6 gap-4">
      <h1 class="text-3xl font-bold text-blue-900">ðŸ“¦ Dashboard Produk</h1>
      <div class="flex flex-col sm:flex-row gap-3">
        <form action="/dashboard" method="GET" class="flex">
          <input type="text" name="search" placeholder="Cari produk..." class="px-3 py-2 border border-gray-300 rounded-l-md focus:outline-none focus:ring focus:border-blue-400" />
          <button type="submit" class="bg-blue-100 px-4 py-2 rounded-r-md hover:bg-blue-200 transition">Cari</button>
        </form>
        <a href="/add-product" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition">+ Tambah Produk</a>
        <form action="/logout" method="POST">
          <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition">Logout</button>
        </form>
      </div>
    </div>

    <!-- Tabel Produk -->
    <div class="overflow-x-auto bg-white rounded-xl shadow">
      <table class="min-w-full text-sm text-left">
        <thead class="bg-blue-600 text-white text-xs uppercase tracking-wider">
          <tr>
            <th class="px-4 py-3">Reference</th>
            <th class="px-4 py-3">Nama Produk</th>
            <th class="px-4 py-3">Brand</th>
            <th class="px-4 py-3">Harga</th>
            <th class="px-4 py-3">Stok</th>
            <th class="px-4 py-3">Aksi</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% products.forEach(product => { %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-2"><%= product.reference %></td>
              <td class="px-4 py-2"><%= product.product_name %></td>
              <td class="px-4 py-2"><%= product.brand %></td>
              <td class="px-4 py-2">Rp <%= product.final_price ? product.final_price.toLocaleString('id-ID') : '0' %></td>
              <td class="px-4 py-2"><%= product.stock %></td>
              <td class="px-4 py-2 flex items-center gap-2">
                <a href="/edit-product/<%= product.reference %>" class="text-blue-600 hover:underline font-medium">Edit</a>
                <form action="/delete-product/<%= product.reference %>" method="POST" onsubmit="return confirm('Yakin ingin menghapus produk ini?');">
                  <button type="submit" class="text-red-600 hover:underline font-medium">Hapus</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
